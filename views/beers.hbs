{{#each beers}}
<div class="card" style="width: 18rem;">
  <img src="{{this.image_url}}" class="card-img-top" alt="picture of beer">
  <div class="card-body">
    <h5 class="card-title">{{this.name}}</h5>
    <p class="card-text">{{this.description}}</p>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item">{{this.tagline}}</li>
  </ul>
</div>
{{/each}}